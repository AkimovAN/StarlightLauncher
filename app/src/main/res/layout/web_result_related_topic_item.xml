<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/related_topic_item_container"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/search_results_list_item_padding">

    <ImageView
        android:id="@+id/related_topic_preview"
        android:layout_width="@dimen/material_list_item_smaller_avatar_dimen"
        android:layout_height="@dimen/material_list_item_smaller_avatar_dimen"
        android:layout_marginEnd="@dimen/material_list_item_avatar_padding_right"
        android:contentDescription="@string/related_topic_preview_description" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/related_topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceSubtitle1" />

    </LinearLayout>

</LinearLayout>

