<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/card_padding"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/active_device_type_icon"
        android:layout_width="@dimen/material_list_item_icon_dimen"
        android:layout_height="@dimen/material_list_item_icon_dimen"
        android:layout_marginEnd="@dimen/material_list_item_icon_margin_end"
        android:contentDescription="@string/bluetooth_device_type_icon_description"
        android:tint="?colorOnBackground" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <kenneth.app.starlightlauncher.views.AdaptiveColorTextView
            android:id="@+id/active_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1" />

        <kenneth.app.starlightlauncher.views.AdaptiveColorTextView
            android:id="@+id/active_device_connection_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>