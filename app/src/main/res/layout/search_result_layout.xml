<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <kenneth.app.spotlightlauncher.searching.views.SuggestedResultCard
        android:id="@+id/suggesed_result_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/section_card_margin_horizontal"
        android:layout_marginVertical="@dimen/section_card_margin_vertical"
        android:background="@drawable/card_background"
        android:visibility="gone" />

    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/section_card_space_between" />

    <kenneth.app.spotlightlauncher.searching.views.AppsSectionCard
        android:id="@+id/apps_section_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/section_card_margin_horizontal"
        android:layout_marginVertical="@dimen/section_card_margin_vertical"
        android:visibility="gone" />

    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/section_card_space_between" />

    <kenneth.app.spotlightlauncher.searching.views.FilesSectionCard
        android:id="@+id/files_section_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/section_card_margin_horizontal"
        android:layout_marginVertical="@dimen/section_card_margin_vertical"
        android:visibility="gone" />

    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/section_card_space_between" />

    <kenneth.app.spotlightlauncher.searching.views.WebResultCard
        android:id="@+id/web_result_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/section_card_margin_horizontal"
        android:layout_marginVertical="@dimen/section_card_margin_vertical"
        android:visibility="gone" />

    <Space
        android:layout_width="0dp"
        android:layout_height="48dp" />

</merge>