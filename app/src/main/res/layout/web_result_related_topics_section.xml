<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/related_topics_section_dividers"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="@dimen/card_padding"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.1"
        android:background="?attr/colorOnBackground" />

    <kenneth.app.spotlightlauncher.views.AdaptiveColorTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/card_padding"
        android:layout_marginBottom="@dimen/card_padding"
        android:text="@string/related_topics_label"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/related_topics_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_padding"
        android:nestedScrollingEnabled="false" />

</LinearLayout>