<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/require_location_perm_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/require_location_perm_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/wifi_coarse_location_perm_required_label"
        android:textAppearance="?attr/textAppearanceOverline"
        android:textColor="?attr/colorOnPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="@string/wifi_coarse_location_perm_required_description"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="?attr/colorOnPrimary" />

    <Button
        android:id="@+id/grant_location_permission_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/grant_permission_label"
        android:textColor="?attr/colorOnPrimary" />

</LinearLayout>