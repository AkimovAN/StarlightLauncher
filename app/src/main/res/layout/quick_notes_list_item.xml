<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/quick_notes_list_item_separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="8dp"
        android:alpha="0.3"
        android:background="?android:textColorPrimaryDisableOnly" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quick_notes_list_item_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp" />

        <Space
            android:layout_width="24dp"
            android:layout_height="0dp" />

        <kenneth.app.spotlightlauncher.views.IconButton
            android:id="@+id/quick_notes_list_item_delete_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:icon="@drawable/ic_trash_alt" />

    </LinearLayout>

</LinearLayout>