<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/files_list_item_container"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/material_list_item_padding_horizontal">

    <ImageView
        android:id="@+id/files_list_item_preview"
        android:layout_width="@dimen/material_list_item_bigger_avatar_dimen"
        android:layout_height="@dimen/material_list_item_bigger_avatar_dimen"
        android:layout_marginEnd="@dimen/material_list_item_avatar_padding_right" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/files_list_item_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1" />

    </LinearLayout>

</LinearLayout>
