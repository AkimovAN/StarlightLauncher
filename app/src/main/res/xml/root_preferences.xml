<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <Preference
        app:fragment="kenneth.app.starlightlauncher.prefs.appearance.AppearanceSettingsFragment"
        app:icon="@drawable/ic_swatchbook"
        app:key="@string/appearance_pref_key"
        app:summary="@string/appearance_summary"
        app:title="@string/appearance_title" />

    <PreferenceCategory
        app:key="@string/pref_category_search_behavior"
        app:title="@string/search_header">

        <Preference
            app:fragment="kenneth.app.starlightlauncher.prefs.searching.SearchLayoutSettingsFragment"
            app:icon="@drawable/ic_window_grid"
            app:key="@string/search_layout_pref_key"
            app:summary="@string/search_layout_summary"
            app:title="@string/search_layout_title" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="@string/pref_category_widgets"
        app:title="@string/widgets_header">

        <Preference
            app:fragment="kenneth.app.starlightlauncher.prefs.datetime.DateTimeSettingsFragment"
            app:icon="@drawable/ic_clock"
            app:key="@string/date_time_pref_key"
            app:summary="@string/date_time_pref_summary"
            app:title="@string/date_time_pref_title" />

        <Preference
            app:fragment="kenneth.app.starlightlauncher.prefs.MediaControlSettingsFragment"
            app:icon="@drawable/ic_play_circle"
            app:key="@string/pref_key_media_control"
            app:summary="@string/media_control_summary"
            app:title="@string/media_control_title" />

    </PreferenceCategory>

    <PreferenceCategory app:title="">

        <Preference
            app:icon="@drawable/ic_info_circle"
            app:key="@string/pref_key_launcher_version"
            app:title="@string/launcher_version_title" />

        <Preference
            app:icon="@drawable/ic_brackets_curly"
            app:key="@string/pref_key_launcher_source_code"
            app:summary="@string/launcher_source_code_summary"
            app:title="@string/launcher_source_code_title" />

        <Preference
            app:icon="@drawable/ic_comment_dots"
            app:key="@string/pref_key_launcher_provide_feedback"
            app:summary="@string/launcher_provide_feedback_summary"
            app:title="@string/launcher_provide_feedback_title" />

        <Preference
            app:key="@string/pref_key_launcher_author"
            app:summary="@string/launcher_author_summary"
            app:title="@string/launcher_author_title" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/advanced_pref_category_title">

        <Preference
            app:key="@string/pref_key_restart_launcher"
            app:summary="@string/restart_launcher_summary"
            app:title="@string/restart_launcher_title" />

    </PreferenceCategory>

</PreferenceScreen>