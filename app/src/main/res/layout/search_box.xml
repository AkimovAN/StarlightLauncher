<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <kenneth.app.spotlightlauncher.views.BlurView
        android:id="@+id/search_box_blur_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/search_box_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/search_box_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/search_box_container_padding"
                    android:background="@null"
                    android:hint="@string/search_box_label"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="?colorOnBackground"
                    android:textColorHint="?hintTextColor"
                    android:textSize="@dimen/search_box_text_size"
                    android:textStyle="bold"
                    tools:ignore="Autofill" />

                <kenneth.app.spotlightlauncher.views.IconButton
                    android:id="@+id/clear_search_box_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="@dimen/widget_margin_horizontal"
                    app:icon="@drawable/ic_angle_up"
                    app:iconSize="32dp" />

            </FrameLayout>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/search_loading_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="invisible"
                app:indicatorColor="?colorPrimary" />

        </LinearLayout>

    </kenneth.app.spotlightlauncher.views.BlurView>
</layout>