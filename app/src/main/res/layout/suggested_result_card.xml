<?xml version="1.0" encoding="utf-8"?>
<kenneth.app.spotlightlauncher.views.BlurView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:blur="http://schemas.android.com/apk/res-auto"
    android:id="@+id/suggested_section_card_blur_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/section_card_margin_horizontal"
    android:layout_marginVertical="@dimen/section_card_margin_vertical"
    android:fitsSystemWindows="false"
    blur:blurAmount="?blurAmount">

    <LinearLayout
        android:id="@+id/suggested_section_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/section_card_padding"
            android:text="@string/suggested_section_title"
            android:textAppearance="@style/SearchResultSectionHeader" />

        <LinearLayout
            android:id="@+id/suggested_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

</kenneth.app.spotlightlauncher.views.BlurView>

