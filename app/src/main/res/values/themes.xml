<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightLauncherTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:fontFamily">@font/manrope</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:textColor">#80000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="plateColor">#80FFFFFF</item>
        <item name="colorOnPlate">#80000000</item>
        <item name="backgroundColorOnPlate">#34FFFFFF</item>
        <item name="colorOnBackground">#80000000</item>
        <item name="hintTextColor">#4D000000</item>
        <item name="cardCornerRadius">8dp</item>

        <item name="blurAmount">20</item>
    </style>

    <style name="DarkLauncherTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:fontFamily">@font/manrope</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>

        <item name="plateColor">#4D000000</item>
        <item name="colorOnPlate">#FFFFFFFF</item>
        <item name="backgroundColorOnPlate">#1A000000</item>
        <item name="colorOnBackground">#FFFFFFFF</item>
        <item name="hintTextColor">#80FFFFFF</item>
        <item name="cardCornerRadius">8dp</item>

        <item name="blurAmount">20</item>
    </style>

</resources>