<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Style.SpotlightLauncher" parent="" />

    <style name="Style.SpotlightLauncher.SearchResultCardTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Style.SpotlightLauncher.TextButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_button_color</item>
    </style>

    <style name="Style.SpotlightLauncher.IconButton">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:tint">?android:textColor</item>
    </style>

</resources>